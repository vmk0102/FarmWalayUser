<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp"

    >
    <TableLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/lblUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="User Name:"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="Wali Muhammad Khubaib"
        />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblFarmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Farmhouse Name"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtFarmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="ABC"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Location"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="Karachi,Pakistan"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Phone #"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="0321-123456789"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Price:"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="2312"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Check In Date:"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="2021-June-12"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Check Out Date:"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="2021-June-13"
                />
        </TableRow>

    </TableLayout>
<LinearLayout
    android:layout_below="@+id/infoLayout"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/viewdeleteupdate"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/btnDelete"
        android:backgroundTint="@android:color/holo_red_dark"
        android:background="@drawable/roundedbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="Delete Booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>

</RelativeLayout>