<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp"

    >
    <TableLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/lblFarmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
        android:id="@+id/txtFarmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="Wali Muhammad Khubaib"
        />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Location"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="Karachi,Pakistan"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Price:"
                android:textStyle="bold"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10px"
                android:textColor="@color/black"
                android:text="2312"
                />
        </TableRow>

    </TableLayout>
<LinearLayout
    android:layout_below="@+id/infoLayout"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/btnViewFeatures"
        android:backgroundTint="@color/greenapp"
        android:background="@drawable/roundedbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="View Features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btnUpdate"
        android:backgroundTint="@color/greenapp"
        android:background="@drawable/roundedbtn"
        android:layout_width="match_parent"

        android:layout_height="40dp">
        <TextView
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="Update"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnDelete"
        android:backgroundTint="@android:color/holo_red_dark"
        android:background="@drawable/roundedbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>

</RelativeLayout>