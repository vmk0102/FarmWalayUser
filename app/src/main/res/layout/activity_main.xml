    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/white"

        android:background="@drawable/roundedtopcorner"
        android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/select"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/farmhousebtn"
                android:clickable="true"
                android:background="@drawable/roundedbtns"
                android:layout_width="100dp"
                android:layout_height="40dp">
                <TextView
                    android:text="Farmhouse"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/guesthousebtn"
                android:clickable="true"
                android:background="@drawable/roundedbtns"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="40dp">
                <TextView
                    android:text="Guesthouse"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/select"
            android:id="@+id/searchbar"
            android:background="@color/lightgreenapp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="@color/lightgreenapp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:id="@+id/txtStartDate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:background="@color/white"

                android:paddingLeft="20dp"
                android:backgroundTint="@color/lightgreenapp"
                android:hint="Start Date" />
            <EditText
                android:id="@+id/txtEndDate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:backgroundTint="@color/lightgreenapp"
                android:hint="End Date" />
            <RelativeLayout
                android:id="@+id/btnSearch"
                android:background="@drawable/roundedbtn"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginLeft="60dp"

                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/ic_search"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:tint="@color/white"
                    />
            </RelativeLayout>
        </LinearLayout>

