<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenapp"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/white"

        android:background="@drawable/roundedtopcorner"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/admin_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a User"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:paddingBottom="20dp"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="First Name"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:background="@drawable/roundedbtn"
            android:backgroundTint="@color/lightgreenapp"
            android:layout_below="@+id/admin_header">

        </EditText>


        <EditText
            android:id="@+id/last_name"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Last Name"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbtn"
            android:backgroundTint="@color/lightgreenapp"
            android:gravity="center"
            android:layout_below="@+id/first_name">

        </EditText>

        <EditText
            android:id="@+id/admin_cnic"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_below="@+id/last_name"
            android:hint="CNIC"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbtn"
            android:backgroundTint="@color/lightgreenapp"
            android:gravity="center" >


        </EditText>


        <EditText
            android:id="@+id/admin_phone_no"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:layout_below="@+id/admin_cnic"
            android:hint="Phone Number"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbtn"
            android:backgroundTint="@color/lightgreenapp"
            android:gravity="center" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:ems="10"
            android:layout_below="@+id/admin_phone_no"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="Password"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbtn"
            android:backgroundTint="@color/lightgreenapp"
            android:inputType="textPassword"
            android:gravity="center"
            />

        <RelativeLayout
            android:id="@+id/btnSave"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="80dp"
            android:layout_below="@id/password">

            <TextView
                android:id="@+id/txtSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="Save User"
                android:textSize="17sp" />

        </RelativeLayout>



    </RelativeLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedcircle"
        android:elevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:elevation="10dp"
            android:layout_marginTop="0dp"
            android:layout_width="150dp"
            android:src="@drawable/fm_transparent"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp" />
    </LinearLayout>

    </RelativeLayout>
</ScrollView>